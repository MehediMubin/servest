# EditorConfig for CLI backend project
root = true

# Default settings for all files
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Override for JSON files
[*.json]
indent_size = 2

# Override for Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Override for YAML files
[*.yml]
indent_size = 2

# Override for TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
