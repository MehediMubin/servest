{
  "name": "servest-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://servest.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-rashedin/servest.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "backend",
    "cli",
    "scaffolding",
    "express",
    "django",
    "laravel",
    "typescript",
    "project-generator"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "typecheck": "tsc -p tsconfig.base.json && pnpm -r --parallel run typecheck",
    "build": "pnpm -r run build",
    "test": "vitest run",
    "publish:servest": "pnpm --filter create-servest publish --access public"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@eslint/js": "^9.33.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fs-extra": "^11.3.1",
    "lint-staged": "^16.1.5",
    "mri": "^1.2.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.13.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ],
    "web-frontend/**/__tests__/**/*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@10.14.0"
}
