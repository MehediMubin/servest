{
  "name": "servest-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://servest.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-rashedin/servest.git"
  },
  "workspaces": [
    "packages/*",
    "app"
  ],
  "keywords": [
    "backend",
    "cli",
    "scaffolding",
    "express",
    "django",
    "laravel",
    "typescript",
    "project-generator"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint:packages": "eslint --cache packages",
    "lint:app": "eslint --cache app",
    "lint": "pnpm lint:packages && pnpm lint:app",
    "typecheck": "tsc -p tsconfig.base.json && pnpm -r --parallel run typecheck",
    "test-unit": "vitest run",
    "test-serve": "vitest run -c vitest.config.e2e.ts",
    "test": "pnpm test-unit && pnpm test-serve",
    "build": "pnpm -r --filter='./packages/*' run build",
    "publish:servest": "pnpm --filter create-servest publish --access public"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-regexp": "^2.10.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.13.5",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ],
    "web-frontend/**/__tests__/**/*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@10.14.0"
}
