{
  "name": "servest-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://servest.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-rashedin/servest.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "backend",
    "cli",
    "scaffolding",
    "express",
    "django",
    "laravel",
    "typescript",
    "project-generator"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm -r run build",
    "test": "vitest run",
    "publish:servest": "pnpm --filter create-servest publish --access public"
  },
  "devDependencies": {
    "@clack/prompts": "^0.11.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fs-extra": "^11.3.1",
    "lint-staged": "^16.1.5",
    "mri": "^1.2.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.13.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "packageManager": "pnpm@10.14.0"
}